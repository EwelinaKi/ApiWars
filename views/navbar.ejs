<!--document head-->
<!DOCTYPE html>
<html lang="en">
<head>
    <title>API WARS</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">
</head>

<style>
    body {background-image: url("/img/bcg1.jpg");}
    td {background-color: rgba(255,255,255, .9)}
    th {background-color: rgba(23,162,184, .9); color: white}

</style>

<body class="container w-80" >


<!--navbar-->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <span class="navbar-brand mb-0 h1" >API WARS</span>
    <div class="collapse navbar-collapse bg-indigo" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/">Planets<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/stats">Stats<span class="sr-only"></span></a>
            </li>
            <li class="nav-item active">
                <% if (user) { %>
                     <a class="nav-link" href="/">Logout</a>
                <% } else { %>
                     <a class="nav-link" href="/login">Login</a>
                <% } %>
            </li>
            <li class="nav-item">
                <% if (user) { %>
                    <a class="nav-link" href="#">Signed as <%= user.name %></a>
                <% } else { %>
                    <span class="nav-link disabled">You are not logged</span>
                <% } %>
            </li>

        </ul>

        <div class="form-inline my-2 my-lg-0">
            <input id="search"
                   class="form-control mr-sm-2"
                   type="search"
                   placeholder="Search planet..."
                   aria-label="Search">
            <button class="btn btn-outline-info my-2 my-sm-0"
                    onclick="searchPlanet()">Search
            </button>
        </div>
    </div>
</nav>